<div class="row">
	<div class="col-md-3">
		<%= render 'room_menu' %>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			
			<div class="panel-heading">
				Listing
			</div>

			<div class="panel-body">
				<div class="container">
					<%= form_for @room do |f| %>
						<div class="row">					
							<div class="col-md-4 select">
								<div class="form-group">
									<label for="">Home Type</label>
									<%= f.select :home_type, [["Apartment", "Apartment"], ["House", "House"], ["Bed & Breakfast", "Bed & Breakfast"]],
																id: "home_type", prompt: "Select.....", class: "form-control" %>
								</div>
							</div>

							<div class="col-md-4 select">
								<div class="form-group">
										<label for="">Room Type</label>
									<%= f.select :room_type, [["Entire", "Entire"], ["Private", "Private"], ["Shared", "Shared"]],
																id: "home_type", prompt: "Select.....", class: "form-control" %>
								</div>
							</div>

							<div class="col-md-4 select">
								<div class="form-group">
										<label for="">Booking Type</label>
										<%= f.select :instant, Room.instants.map {|key, value| [key.humanize, key]}, prompt: "Select.....", class: "form-control" %>
								</div>
							</div>

							<div class="col-md-4 select">
								<div class="form-group">
									<label for="">Accomodate</label>
									<%= f.select :accomodate, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
																id: "accomodate", prompt: "Select.....", class: "form-control" %>
								</div>
							</div>

						</div>

						<div class="row">
							<div class="col-md-4 select">
								<div class="form-group">
									<label for="">Bedrooms</label>
									<%= f.select :bed_room, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
																id: "bed_room", prompt: "Select.....", class: "form-control" %>
								</div>
							</div>

							<div class="col-md-4 select">
								<div class="form-group">
									<label for="">Bathrooms</label>
									<%= f.select :bath_room, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
																id: "bath_room", prompt: "Select.....", class: "form-control" %>
								</div>
							</div>					
						</div> <!-- .row -->
						<div>
							<%= f.submit "Save", class: "btn btn-normal" %>
						</div>
					<% end %>
				</div>				
			</div>
		</div>
	</div>
</div>